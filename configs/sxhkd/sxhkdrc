## Keybindings config for Archcraft's BSPWM

##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + Return
	alacritty

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + @space
	rofi -show drun

##---------- Applications ----------##

# Launch Apps
super + {e,w}
	{thunar,firefox}

##---------- System Keys ----------##

# Brighness control
XF86MonBrightness{Up,Down}
	brightnessctl -d gmux_backlight set {+10%,10%-}

XF86KbdBrightness{Up,Down}
	brightnessctl -d smc::kbd_backlight set {+10%,10%-}
	
	
# Speaker Volume control
XF86Audio{RaiseVolume,LowerVolume}
	pactl set-sink-volume 0 {+5%,-5%}

# Mic Volume control
XF86AudioMute
	pactl set-sink-mute 0 toggle
	
# Music control
XF86Audio{Next,Prev,Play}
	playerctl {next,previous,play-pause}

##---------- Bspwm ----------##

# Hide/Unhide Window
super + shift + z
	bspwinmask

# Close App
super + q
	bspc node -c

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}
	
# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Switch workspace
super + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch workspace or Send focused Node to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}' '--follow'

# Send focused Node to workspace directionally
super + shift + {Left,Right}
	bspc node -d {prev,next} '--follow'

# Change focus of the Node or Swap Nodes
super + {_,shift + }{k,j}
	bspc node -{f,s} {west,east}

# Move floating windows
super + alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Expanding windows
super + {h,l}
	bspc node -z {left -20 0,right 20 0}
	
# Shrinking windows
super + shift + {h,l}
	bspc node -z {left 20 0,right -20 0}

# Split horizontal, vertical or cancel
# super + {h,v,q}
	# bspc node -p {east,south,cancel}

# Preselect the ratio
# super + ctrl + {1-9}
	# bspc node -o 0.{1-9}

# Toggle Layout (Tiled/Monocle)
super + l
	bspc desktop -l next

# Toggle Fullscreen
super + shift + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + shift + space
    bspc node -t "~"{floating,tiled}

# Set the node flags
# super + ctrl + {m,x,y,z}
	# bspc node -g {marked,locked,sticky,private}

